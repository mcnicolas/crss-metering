<?xml version="1.0" encoding="UTF-8"?>
<included>
  <appender name="DAILY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

    <encoder>
      <pattern>${FILE_LOG_PATTERN}</pattern>
    </encoder>

    <file>${DAILY_LOG_PATH:-/var/log}/${APP_NAME:-crss_app}.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <fileNamePattern>${DAILY_LOG_PATH:-/var/log}/%d{yyyy-MM-dd}.${APP_NAME:-crss_app}.log</fileNamePattern>

      <maxHistory>${DAILY_LOG_MAX:-7}</maxHistory>
      <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>

  </appender>
</included>